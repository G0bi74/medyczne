{
  "expo": {
    "name": "Apteczka Seniora",
    "slug": "apteczka-seniora",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00A08A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.apteczkaseniora.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Aplikacja potrzebuje dostępu do kamery, aby skanować kody kreskowe leków.",
        "NSPhotoLibraryUsageDescription": "Aplikacja potrzebuje dostępu do galerii, aby zapisywać zdjęcia leków."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00A08A"
      },
      "package": "com.apteczkaseniora.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Zezwól aplikacji na dostęp do kamery w celu skanowania kodów kreskowych leków."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#00A08A",
          "sounds": []
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "88aa4905-3434-4957-aa91-ef39c720fd75"
      }
    },
    "owner": "gobi74"
  }
}
